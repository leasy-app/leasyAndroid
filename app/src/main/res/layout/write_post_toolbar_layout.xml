<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.4"
        android:layout_gravity="center"
        android:src="@color/text_color_grey"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_write_post_add_text"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_text"
                android:backgroundTint="@android:color/transparent"
                android:foreground="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@color/text_color_grey"
                android:alpha="0.5"/>

            <ImageButton
                android:id="@+id/btn_write_post_add_heading"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_header"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                android:foreground="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@color/text_color_grey"
                android:alpha="0.5"/>

            <ImageButton
                android:id="@+id/btn_write_post_add_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_insert_picture_icon"
                android:scaleType="centerCrop"
                android:foreground="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@color/text_color_grey"
                android:alpha="0.5"/>

            <ImageButton
                android:id="@+id/btn_write_post_add_code"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_coding"
                android:scaleType="centerCrop"
                android:foreground="?selectableItemBackgroundBorderless"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>