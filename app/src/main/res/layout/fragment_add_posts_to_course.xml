<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.AddPostsToCourseFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_posts_to_course"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        app:title="Add Posts:"
        app:titleTextAppearance="@style/AppTextAppearance.Heading1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_add_posts_to_course"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_add_posts_to_course"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:clipToPadding="false"
        android:paddingBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>